      "icons": [
        {
          "src": "/icon-chat.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Matrix Visualization",
      "short_name": "Matrix",
      "description": "View molecular matrix visualizations",
      "url": "/matrix",
      "icons": [
        {
          "src": "/icon-matrix.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "MCP Tools",
      "short_name": "MCP",
      "description": "Access Model Context Protocol tools",
      "url": "/mcp",
      "icons": [
        {
          "src": "/icon-mcp.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "System dashboard and settings",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icon-dashboard.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".json", ".csv", ".txt", ".mol", ".sdf", ".pdb"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "chemical/x-mol": [".mol"],
        "chemical/x-sdf": [".sdf"],
        "chemical/x-pdb": [".pdb"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+chirality",
      "url": "/?protocol=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  }
}