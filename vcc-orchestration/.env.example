# Chirality AI - Unified Environment Configuration
# Copy this to .env and set your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-proj-your-openai-api-key
OPENAI_MODEL=gpt-4.1-nano
DEFAULT_TEMPERATURE=0.6
MAX_OUTPUT_TOKENS=800

# Neo4j Configuration (Required)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-strong-password
NEO4J_DATABASE=neo4j

# Application Ports (adjust if needed)
ADMIN_PORT=3001
GRAPHQL_PORT=8080
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
FRONTEND_PORT=3210

# CF14 v2.1.1 Features
CF14_VERSION=2.1.1
CF14_ENABLE_ARRAY_PH=true
CF14_LEGACY_API_SUPPORT=true

# Application URLs (derived from ports above)
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_API_BASE=http://localhost:3001
GRAPHQL_ENDPOINT=http://localhost:8080/graphql

# Production Settings (optional)
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
DEBUG=false