# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password-here
NEO4J_DATABASE=neo4j

# Alternative: Neo4j Aura Cloud
# NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your-cloud-password

# Service Ports
GRAPHQL_PORT=8080
ADMIN_PORT=3001
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Framework Configuration
CF14_VERSION=14.3.0.0
DEFAULT_RESOLVER=openai
ENABLE_HUMAN_IN_LOOP=false
OPERATION_TIMEOUT=30

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
ENABLE_TRACING=true

# Testing Configuration
TEST_NEO4J_URI=bolt://localhost:7687
TEST_NEO4J_USER=neo4j
TEST_NEO4J_PASSWORD=test_password

# Performance Settings
MAX_MATRIX_SIZE=10
MAX_CONCURRENT_OPERATIONS=5
CACHE_ENABLED=true
CACHE_TTL=3600

# Security Settings
API_RATE_LIMIT=100
MAX_REQUEST_SIZE=1048576
ENABLE_CORS=true

# Deployment Settings
NODE_ENV=development
DOCKER_COMPOSE_PROJECT=chirality
COMPOSE_FILE=docker-compose.yml

# Optional: External Services
# VECTOR_DB_URL=http://localhost:8000
# ANALYTICS_API_KEY=your-analytics-key
# MONITORING_ENDPOINT=https://your-monitoring.com